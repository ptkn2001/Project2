<div class="project-details-page section">
    <div class="project-details-header">
        {{#if (eq user_id project_organizer_id)}}
        <button class="cancel-event button" type="button" projectid="{{project_id}}">Cancel this event</button>
         {{/if}}
    </div>
    <div class="divider"></div>
    <div class="project-details-body">
        <div class="project-details-column column-15">
            <h3 class="project-details-header has-text-light">Contributors</h3>
            <ul class="contribution-list">
                {{#each contributors as |contributor|}}
                <li class="has-text-light">{{contributor.name}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="project-details-column column-35">
            <h3 class="project-details-header has-text-light" >Description</h3>
            <p class="has-text-light">{{project_description}}</p>
            <h4 class="project-details-header has-text-light">Event Location</h4>
            <p class="has-text-light" id="event-location">{{event_location}}</p>
            <div class="map" id="map" style="width:100%;height:100%;"></div>
        </div>
        <div class="project-details-column column-20">
            <h3 class="project-details-header has-text-light">{{project_name}}</h3>
            <img src="/image/{{event_type}}.png" alt="Event Type Image">
            <h4 class="project-details-header has-text-light">Tasks</h4>
            <ul class="task-list">
                {{#each tasks as |task|}}
                <li class="has-text-light">{{task.name}}</li>
                {{/each}}
            </ul>
            {{#if (eq user_id project_organizer_id)}}
                <div class="new-task-form">
                    <input  type="text" id="new-task-input" value="">
                    <div class="new-task-buttons">
                        <button class="add-task" type="button" projectid="{{project_id}}">OK</button>
                        <button class="cancel-task" type="button">Cancel</button>
                    </div>
                </div>
                <button class="add-new-task button" type="button" projectid="{{project_id}}">Add new task</button> {{/if}}
        </div>
        <div class="project-details-column column-20">
            <h3 class="project-details-header has-text-light">Contact</h3>
            <p class="contact has-text-light">{{project_organizer}}</p>
            <p class="contact has-text-light">{{project_contact}}</p>
            <h4 class="project-details-header has-text-light">Donate</h4>
            {{#if logged_in}}
            <div class="contribute-form">
                <p class="has-text-light">Contribution amount in USD</p>
                <input type="text" id="contribute-input" name="contribute-input" value="">
                <button class="add-contribute" type="button" projectid="{{project_id}}">Donate</button>
            </div>
            <br>
            {{/if}}
            <progress class="progress is-info" value="{{contributedTotal contributors}}" max="{{event_fund}}">0%</progress>
            <div class="project-donate">
                <p class="has-text-light">Current: ${{contributedTotal contributors}}</p>
                <p class="has-text-light">Goal: ${{event_fund}}</p>
            </div>
        </div>
        <div class="column-10"></div>
    </div>
</div>

<script src="/js/map.js"></script>
<script src="/js/projectdetails.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA51EA8ocFj-7sqx78LGYN4BywXlsdyrsQ&map_ids=6dbf17a103bba713&callback=initMap"></script>
