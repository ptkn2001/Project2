<div class="projects">
    <div class="projects-header">
        <h2>All Active Projects</h2>
    </div>
    <div class="divider"></div>
    <div class="projects-body">
        {{#each projects as |project|}}
        <div class="project">
            <div class="project-item-group">
                <h4>{{project.name}}</h4>
                <p>Event Date: {{format_date project.event_date}}</p>
                <p>Event Fund: ${{project.event_fund}}</p>
                <a href="">view event details</a>
            </div>
            <div class="project-item-group">
                <img src="./image/{{project.event_name}}.png" alt="Event Image">
            </div>
            <div class="project-item-group">
                <p>{{project.description}}</p>
            </div>
        </div>
        <div class="divider"></div>
        {{/each}}
    </div>

</div>

<script src="./js/project.js"></script>