<div class="new-project-page section">
    <div class="has-text-light is-flex is-justify-content-center login-header">
        <h2>Create a New Project</h2>
    </div>
    <div class="is-flex is-justify-content-center">
        <form class="form new-project-form">
            <div class="form-group">
                <label class="label has-text-light " for="project-name">project name:</label>
                <input class="form-input input" type="text" id="project-name" />
            </div>
            <div class="form-group">
                <label class="label has-text-light" for="project-description">description:</label>
                <textarea id="project-description" class="form-input" name="project-description" rows="4"></textarea>
            </div>
            <div class="form-group">
                <label class="label has-text-light" for="project-date">event date:</label>
                <input class="form-input input" type="text" id="project-date" />
            </div>
            <div class="form-group">
                <label class="label has-text-light" for="project-location">event location:</label>
                <input class="form-input input" type="text" id="project-location" />
            </div>
            <div class="form-group">
                <label class="label has-text-light" for="project-fund-goal">Fund goal:</label>
                <input class="form-input input" type="text" id="project-fund-goal" />
            </div>
            <div class="form-group">
                <label class="label has-text-light" for="event-type">Event Type:</label>
                <select class="radio" id="event-type" name="event-type">
              <option class="radio" value="event">Event</option>
              <option value="meetup">Meetup</option>
              <option value="party">Party</option>
              <option value="picnic">Picnic</option>
            </select>
            </div>
            <div class="form-group">
                <button type="submit button">Create Project</button>
            </div>
        </form>
    </div>
</div>
<script src="./js/newproject.js"></script>