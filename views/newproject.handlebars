<div class="new-project section">
    <h2>Create a New Project</h2>

    <form class="form new-project-form">
        <div class="form-group">
            <label class="label" for="project-name">project name:</label>
            <input class="form-input input" type="text" id="project-name" />
        </div>
        <div class="form-group">
            <label class="label" for="project-description">description:</label>
            <textarea id="project-description textarea" name="project-description" rows="4" cols="50"></textarea>
        </div>
        <div class="form-group">
            <label class="label" for="project-date">event date:</label>
            <input class="form-input input" type="text" id="project-date" />
        </div>
        <div class="form-group">
            <label class="label" for="project-fund-goal">Fund goal:</label>
            <input class="form-input input" type="text" id="project-fund-goal" />
        </div>
        <div class="form-group">
            <label class="label" for="event-type">Event Type:</label>
            <select class="radio" id="event-type" name="event-type">
              <option class="radio" value="event">Event</option>
              <option value="meetup">Meetup</option>
              <option value="party">Party</option>
              <option value="picnic">Picnic</option>
            </select>
        </div>
        <div class="form-group">
            <button class="button" type="submit">Create Project</button>
        </div>
    </form>
</div>
<script src="./js/newproject.js"></script>