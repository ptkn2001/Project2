<div class="signuppage section">
  <div class="sign-up-header has-text-light section is-small is-flex is-justify-content-center">
    <h2>User Sign Up</h2>
  </div>
  <div class="signup-body is-flex is-justify-content-center">
    <form class="form signup-form">
      <div class="form-group">
        <label class="label has-text-light" for="name-signup">Name:</label>
        <input class="form-input input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label class="label has-text-light is-2" for="email-signup">Email:</label>
        <input class="form-input input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label class="label has-text-light" for="password-signup">Password:</label>
        <input class="form-input input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="button" type="submit">sign up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/signup.js"></script>