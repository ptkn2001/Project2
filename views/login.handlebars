<div class="login section">
    <div class="login-header">
        <h2>User Login</h2>
    </div>
    <div class="login-body">
        <form class="form login-form" >
            <div class="form-group">
                <label class="label" for="email-login">email:</label>
                <input class="form-input input" type="text" id="email-login" />
            </div>
            <div class="form-group">
                <label class="label" for="password-login">password:</label>
                <input class="form-input input" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="button" type="submit">login</button>
            </div>
        </form>
    </div>
    <div class="login-signup">
        <a href="/signup">Create a new user account</a>
    </div>
</div>

<script src="./js/login.js"></script>